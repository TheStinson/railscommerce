<%= form_for :product, url: products_path do |f| %>
<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
	<%= f.label :product_name %>
	<br>
	<%= f.text_field :product_name %>
</p>
<p>
  <%= f.label :product_description %>
  <br>
  <%= f.text_field :product_description %>
</p>
<p>
  <%= f.label :product_price %>
  <br>
  <%= f.text_field :product_price %>
</p>
<p>
<%= f.collection_select(:category_id,Category.all, :id,:category_name) %>
</p>
<p>
<%= f.collection_select(:brand_id,Brand.all, :id,:brand_name) %>
</p>

<p>
	<%= f.submit  %>
</p>

<% end %> 	